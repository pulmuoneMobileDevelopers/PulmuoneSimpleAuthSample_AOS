<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PermissionModuleDefaultButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_btn_default</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="PermissionModuleTopTextStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="PermissionModuleDefaultTitleStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="PermissionModuleDefaultMainTextStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_main_default</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="PermissionModuleDefaultSubTextStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_sub_default</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="PermissionModuleDialogStyle" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#FFFFFF</item>

    </style>
</resources>