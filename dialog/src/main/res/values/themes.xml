<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PulmuoneSampleApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PmoOkButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/pmo_ok_bnt_selector</item>
        <item name="android:textColor">@color/colorDialogOkText</item>
    </style>

    <style name="PmoCancelButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/pmo_cancel_bnt_selector</item>
        <item name="android:textColor">@color/colorDialogCancelText</item>
    </style>

    <style name="PmoSingleOkButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/pmo_ok_single_bnt_selector</item>
        <item name="android:textColor">@color/colorDialogOkText</item>
    </style>
</resources>